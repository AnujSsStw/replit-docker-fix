<h1>Log In</h1>

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>

  <%= f.submit "Log In" %>
<% end %>

<p>Don't have an account? <%= link_to "Sign up", signup_path %></p>