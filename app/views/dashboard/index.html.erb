<h1>Dashboard</h1>

<h2>Welcome, <%= current_user.username %>!</h2>

<h3>Recent Security Logs</h3>

<table>
  <thead>
    <tr>
      <th>Timestamp</th>
      <th>Event Type</th>
      <th>Message</th>
      <th>User ID</th>
      <th>IP Address</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
    <% @security_logs.each do |log| %>
      <tr>
        <td><%= log.timestamp %></td>
        <td><%= log.event_type %></td>
        <td><%= log.message %></td>
        <td><%= log.user_id %></td>
        <td><%= log.ip_address %></td>
        <td><%= log.details %></td>
      </tr>
    <% end %>
  </tbody>
</table>